// .vscode/launch.json
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/djangoproject/manage.py",
      "args": ["runserver", "--noreload"],
      "django": true,
      "stopOnEntry": false,
      "console": "integratedTerminal",
      "env": {
        "DJANGO_SETTINGS_MODULE": "djangoproject.settings"
      },
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "python: collectstatic"
    }
  ]
}
